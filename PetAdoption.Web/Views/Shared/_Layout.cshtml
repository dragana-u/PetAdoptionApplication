<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetAdoption.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetAdoption.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3 p-4" style="background-color: #FFF9DB;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" href="/">
                    <img src="https://images.vexels.com/media/users/3/249515/isolated/preview/a51fecf3b2ffa3bd421b2d93feee8057-cute-cat-paw.png" alt="Logo" width="30" height="30" class="d-inline-block align-top" />
                    Pet Adoption
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="AdoptionForms" asp-action="Index">Adoption Forms</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Animals" asp-action="Index">Animals</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="AdoptionShelters" asp-action="Index">Adoption Shelters</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Species" asp-action="Index">Species</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-dark py-3 box-shadow" style="background-color: #FFF9DB;">
    <div class="container text-center">
        &copy; 2025 - PetAdoption
    </div>
</footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

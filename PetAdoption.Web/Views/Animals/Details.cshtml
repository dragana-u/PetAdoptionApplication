@model PetAdoption.Domain.DomainModels.Animal

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center">Animal Details</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="row g-0">
                <div class="col-md-4 d-flex align-items-center justify-content-center bg-light">
                    <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "https://via.placeholder.com/300x300?text=No+Image")"
                         class="img-fluid rounded-start p-2"
                         alt="@Model.Name" style="max-height: 300px; object-fit: contain;" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Name</h4>
                        <p class="card-text text-muted">@Model.Description</p>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Age</dt>
                            <dd class="col-sm-8">@Model.Age</dd>
                            <dt class="col-sm-4">Gender</dt>
                            <dd class="col-sm-8">@Model.Gender</dd>
                            <dt class="col-sm-4">Breed</dt>
                            <dd class="col-sm-8">@Model.Breed</dd>
                            <dt class="col-sm-4">Size</dt>
                            <dd class="col-sm-8">@Model.Size</dd>
                            <dt class="col-sm-4">Intake Date</dt>
                            <dd class="col-sm-8">@Model.IntakeDate.ToShortDateString()</dd>
                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">@Model.Status</dd>
                            <dt class="col-sm-4">Species</dt>
                            <dd class="col-sm-8">@Model.Species?.Name</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning fw-bolder me-2">Edit</a>
                }
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
